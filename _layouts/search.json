[
  {% for file in site.static_files %}
  {% if file.extname == ".md" %}    
  {
        "doc": "{{ page.title | escape }}",
        "title": "{{ page.title | escape }}",
        "content": "{{ page.content | strip_newlines | strip_html | regex_replace: '[^a-zA-Z0-9.,/:;!?]', '' }}",
        "url": "{{ page.url | prepend: site.baseurl | escape }}",
        "relUrl": "{{ page.url | escape }}"
  }
  {% if forloop.last == false %},{% endif %}
  {% endif %}
  {% endfor %}
]