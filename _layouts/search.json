[{% for collection in site.collections %}{% assign doc_count = collection.docs.size %}{% for doc in collection.docs %}
{
    "doc": "{{ doc.title | escape | strip }}",
    "title": "{{ doc.title | escape | strip }}",
    "content": "{{ doc.excerpt | strip_html | strip_newlines | strip }}",
    "url": "{{ doc.url | prepend: site.baseurl | escape }}",
    "relUrl": "{{ doc.url | escape }}"
}{% if forloop.index < doc_count or forloop.parentloop.index < site.collections.size %},{% endif %}{% endfor %}{% endfor %}
]